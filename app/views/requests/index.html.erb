<p id="notice"><%= notice %></p>

<h1>Requests</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Client first</th>
      <th>Client last</th>
      <th>Cost</th>
      <th>Costvat</th>
      <th>Description</th>
      <th>Number employee</th>
      <th>Status</th>
      <th>Client mail</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @requests.each do |request| %>
      <tr>
        <td><%= request.name %></td>
        <td><%= request.client_first %></td>
        <td><%= request.client_last %></td>
        <td><%= request.cost %></td>
        <td><%= request.costVAT %></td>
        <td><%= request.description %></td>
        <td><%= request.number_employee %></td>
        <td><%= request.status %></td>
        <td><%= request.client_mail %></td>
        <td><%= link_to 'Show', request %></td>
        <td><%= link_to 'Edit', edit_request_path(request) %></td>
        <td><%= link_to 'Destroy', request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

