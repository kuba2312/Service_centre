<!DOCTYPE html>
<html>
  <head>
    <ul>
      <li><%= link_to "Strona główna", root_path %></li>
      <li><%= link_to "Zgłoszenia", requests_path %></li>
      <li><%= link_to "Pracownicy", employees_path %></li>
      <% if logged_in? %>
        <li><%= link_to current_employee.nickname, current_employee %></li>
        <li><%= link_to "Wyloguj", logout_path, method: :delete %></li>
      <% else %>
        <li><%= link_to "Zaloguj", login_path %></li>
      <% end %>
    </ul>


    <title>Centrum Serwisowe</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
